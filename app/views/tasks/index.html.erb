<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
      <th>Done</th>
      <th></th>
      <th></th>
      <th></th>
      <th>Check Off</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.body %></td>
        <td><%= task.status %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%= form_with(model: task, local: true, id: 'status_box') do |form| %>
          <td>
            <%= form.label :done? %>
            <%= form.check_box :status, onclick: "this.form.submit();"%>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

